.scroll-title-inner {
  width: 100%;
  overflow: hidden;
  position: relative;
  border: 1px solid #d1dbe5;
  border-left: none;
}
.scroll-title-slider {
  min-height: 30px;
}
.scroll-title-list {
  width: 100%;
  display: flex;
  position: relative;
  z-index: 10;
}
.scroll-title-list::after {
  content: '';
  clear: both;
  width: 0;
  height: 0;
}
.scroll-title-item {
  cursor: pointer;
  flex: 1;
  position: relative;
  overflow: hidden;
  color: #8391a5;
  min-height: 30px;
}
.scroll-title-item:before {
  position: absolute;
  left: 0;
  content: '';
  width: 1px;
  height: 100%;
  background: #d1dbe5;
}
.scroll-title-item-active {
  color: #20a0ff;
  background: rgba(0, 0, 0, 0.5);
}
.scroll-title-cursor {
  position: absolute;
  z-index: 1;
  background: red;
  height: 100%;
}
